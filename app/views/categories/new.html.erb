<div class="container">
  <div class="new-form">
    <h1>Add a new category:</h1>
      <%= simple_form_for @category do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url, label: 'Image URL' %>
        <%= f.submit %>
      <% end %>
  </div>
  <%= render 'shared/home_link' %>
</div>
