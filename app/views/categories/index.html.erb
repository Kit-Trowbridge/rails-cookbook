<div class="banner">
  <div>
    <h2>Cookbook</h2>
    <p>Save your favorite recipes</p>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-between p-3">
    <h2>All categories</h1>
    <%= link_to 'Add a new category', new_category_path, class: "btn btn-success" %>
  </div>
  <div class="card-container">
    <% @categories.each do |category| %>
      <div class="cat-card">
        <h3><%= link_to category.name, category_path(category) %></h3>
        <p><%= category.recipes.count %> recipes</p>
      </div>
    <% end %>
  </div>
</div>
